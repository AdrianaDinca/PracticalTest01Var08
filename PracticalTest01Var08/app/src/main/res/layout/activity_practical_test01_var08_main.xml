<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="ro.pub.cs.systems.eim.practicaltest01Var08.PracticalTest01Var08MainActivity">

    <Button
        android:id="@+id/set_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="SET" />

    <EditText
        android:id="@+id/up_left_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/set_button"
        android:ems="7"
        android:enabled="true"
        android:gravity="center"
        android:inputType="text"
        android:saveEnabled="false" />

    <EditText
        android:id="@+id/up_right_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:saveEnabled="false"
        android:enabled="true"
        android:inputType="text"
        android:ems="7"
        android:layout_alignParentRight="true"
        android:layout_below="@id/set_button"
        android:gravity="center"/>

    <EditText
        android:id="@+id/down_left_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="7"
        android:enabled="true"
        android:layout_alignLeft="@id/up_left_edit_text"
        android:layout_below="@id/up_left_edit_text"
        android:layout_alignRight="@id/up_left_edit_text"
        android:saveEnabled="false"
        android:gravity="center" />

    <EditText
        android:id="@+id/down_right_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="7"
        android:enabled="true"
        android:layout_alignLeft="@id/up_right_edit_text"
        android:layout_alignRight="@id/up_right_edit_text"
        android:saveEnabled="false"
        android:layout_below="@id/up_right_edit_text"
        android:gravity="center" />

</RelativeLayout>





